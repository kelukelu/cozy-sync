shadow()
    -moz-box-shadow arguments
    -webkit-box-shadow arguments
    box-shadow arguments

text-shadow()
    -moz-text-shadow arguments
    -webkit-text-shadow arguments
    text-shadow arguments

@font-face
    font-family main
    src url('../fonts/signika-regular.ttf')

@font-face
    font-family styled
    src url('../fonts/maven-pro-light-200.otf')

blue = #34A6FF
orange = #FE8800

html, body
    height 100%
    width 100%
    padding 0
    margin 0
    box-sizing border-box

html, body, h1, p
    box-sizing border-box

body
    background #F4F4F4
    font-family main

a
    color blue

    &:hover
        color orange

#show-password
#hide-password
    display inline-block
    margin-left 15px

#hide-password
    display none


h1
h2
h3
    font-family styled

h1
    margin 0
    padding 12px 20px
    background #EEE
    border-bottom 1px solid #DDD
    border-radius 8px 8px 0 0

h2
    margin 0
    background #FBFBFB
    font-size 26px

    &.tab
        display inline-block
        position relative

        &.selected
        &:hover
            color blue
            cursor pointer

        &.selected:after
            content ""
            position absolute
            left 0
            bottom -2px
            width 100%
            height 2px
            background blue

.caldavconf
.carddavconf
    display block

.caldavconf ~ .caldavconf
.carddavconf ~ .carddavconf
    display none


h3
    margin-top 30px

p
    margin 20px
    line-height 1.4

h2
   color #555
   font-size 20px
   padding 10px 20px

#content
    padding 20px
    max-width 600px
    margin auto

// block individuals
.content-block
    margin-top 30px
    background #FBFBFB
    border 1px solid #DDD
    border-radius 8px

    ul li
        color blue

        a
            text-decoration none
            line-height 1.8

// block with tabs
.content-tab
    margin 20px
    padding-bottom 5px
    border-left 2px solid #DDD

.menu-tab
    border-bottom 2px solid #DDD

button
    cursor pointer
    border 1px solid blue
    background blue
    color white
    box-shadow none
    text-shadow none
    border-radius 5px
    font-family main
    padding 5px
    font-size 12px
    min-width 50px
    outline none

button:hover
    background orange
    border 1px solid orange
    color white

button:active
    background orange - 3%
    border 1px solid orange
    shadow 1px 3px 2px rgba(0, 0, 0, 0.2) inset, 0 1px 2px rgba(0, 0, 0, 0.0)
    color white

.url
    color #FFF
    font-size 18px
    padding 12px 16px
    background #555
    border-radius 6px

.credentials
    margin 20px
    padding 16px 20px

    p
        margin 10px 0

    span
        font-weight bold
